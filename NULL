#include <iostream>
#include <cstring>
using namespace std;
int main()
{
	char a[100] = "안녕하세요?";
	char b[100] = "날씨가 참 좋군요.";
	char c[100] = "안녕히 계세요!";
	cout << "함수 사용" << endl;
	cout << strlen(a) << ' ' << strlen(b) << ' ' << strlen(c) << ' ' << endl;

	cout << "반복문으로 계산" << endl;

	int i = 0, m = 0 , n =0;

	while (true)
	{
		if (a[i]==NULL)
		{
			break;
		}
		else
		{
			i++;
		}
	}

	while (true)
	{
		if (b[m]==NULL)
		{
			break;
		}
		else
		{
			m++;
		}
	}

	while (true)
	{
		if (c[n]==NULL)
		{
			break;
		}
		else
		{
			n++;
		}
	}

	cout << i << " " << m << " " << n << endl;


}
